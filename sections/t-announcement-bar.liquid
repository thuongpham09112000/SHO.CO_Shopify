<h2 style="text-align: {{ section.settings.title_alignment }}">{{ section.settings.title }}</h2>

{% schema %}
{
  "name": "t-announcement-bar",
  "tag": "section",
  "class": "my-wrapper-class",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],

  "presets": [
    {
      "name": "t-announcement-bar"
    }
  ],
  
}
{% endschema %}
