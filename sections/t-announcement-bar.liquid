<h2>{{ section.settings.show_t-announcement-bar }}</h2>

{% schema %}
{
    "name": "t-announcement-bar",
    "tag": "section",
    "class": "my-wrapper-class",
    "settings":[
        {
            "type": "text",
            "id": "show_t-announcement-bar",
            "label": "Show announcement",
        },
        {
            "type": "select",
            "id": "vertical_alignment",
            "label": "Vertical alignment",
            "options": [
              {
                "value": "top",
                "label": "Top"
              },
              {
                "value": "middle",
                "label": "Middle"
              },
              {
                "value": "bottom",
                "label": "Bottom"
              }
            ],
            "default": "middle"
          }
    ],

    "presets": [
        {
            "name": "t-announcement-bar"
        }
    ]
}
{% endschema %}