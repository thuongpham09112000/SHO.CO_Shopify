{{ 't-fashion-style.css' | asset_url | stylesheet_tag}}

<div class="container">
  <div class="bg-browse-by-style">
    <div class="section-titles">
      <h1>{{ section.settings.title_Style | strip_html }}</h1>
    </div>
    <div class="choose-style-primary">
      <div class="choose-style-item">
        <div class="img-style-1">
          <a href="#">{{ section.settings.style_image_1 | image_url: height: 289 | image_tag }}</a>
