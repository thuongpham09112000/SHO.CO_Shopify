          <a href="#">{{ section.settings.style_image_4 | image_url: height: 289 | image_tag }}</a>
        </div>
      </div>
    </div>
    <div class="choose-style-secondary">
      <div class="choose-style-item">
        <div class="img-style-1">
          <a href="#">{{ section.settings.style_image_5 | image_url: height: 289 | image_tag }}</a>
