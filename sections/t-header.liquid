{{ 'https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' | stylesheet_tag}}
{{'t-header.css' | asset_url | stylesheet_tag }}

    <div class="container">
      <div class="main-header">
        <div class="menu-header">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="true" aria-label="Toggle navigation">
            <span>{{- 'menu-header.svg' | inline_asset_content -}}</span>
          </button>
        </div>
        <div class="logo-header">
          <a href="/" class="logo-icon d-flex align-items-center mb-lg-0 text-decoration-none">
            {%- if settings.logo != blank -%}
                <div class="header__heading-logo-wrapper">
                  {{ settings.logo | image_url: width: 159 | image_tag }}
                </div>
              {%- else -%}
                <span>{{ shop.name }}</span>
              {%- endif -%}
          </a>
        </div>
        <div class="nav-header">
          <ul class="nav">
            {% for link in linklists[section.settings.main_menu].links %}
                <li>
                {%- if link.links -%}
                    <a href="{{ link.url }}" class="nav-link" style="white-space: nowrap;">{{ link.title }}</a>
                {%- endif -%}
                </li>
            {% endfor %}
          </ul>
        </div>
        <div class="search-header">
          <div class="form-search-container">
            <div class="search-mobile text-end">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav-search" aria-controls="nav-search" aria-expanded="true" aria-label="Toggle navigation">
                <a href="#"><span>{{- 'search-mobile.svg' | inline_asset_content -}}</span></a>
              </button>
            </div>
            <form class="form-search-item" role="search" method="get" action="/search">
              <div class="search-wrapper">
                <span>{{- 'search.svg' | inline_asset_content -}}</span>
                <input type="search" name="q" class="form-control" placeholder="Search for products..." aria-label="Search for products...">
              </div>
            </form>
          </div>
        </div>
        <div class="button-header text-end d-flex justify-content-end align-items-center">
            <a href="{{ routes.cart_url }}">
              <button type="button" class="cart-btn">
                <span>{{- 'cart.svg' | inline_asset_content -}}</span>
              </button>
            </a>
            <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
              <button type="button" class="user-btn">
                <span>{{- 'user.svg' | inline_asset_content -}}</span>
              </button>
            </a>
        </div>
      </div>
      <div class="navbar-collapse collapse" id="navbarScroll">
        <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 500px;">
          <li class="nav-item">
            <a href="#" class="nav-link px-2" data-bs-toggle="collapse" data-bs-target="#shop-scroll">
              Shop
              <span class="logo-down">{{- 'down.svg' | inline_asset_content -}}</span>
            </a>
            <div id="shop-scroll" class="navbar-collapse collapse ms-4">
              <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll">
                <li class="nav-item"><a href="#" class="nav-link px-2">Casual</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2">Formal</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2">Party</a></li>
                <li class="nav-item"><a href="#" class="nav-link px-2">Gym</a></li>
              </ul>
            </div>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link px-2">On Sale</a>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link px-2">New Arrivals</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link px-2">Brands</a>
          </li>
        </ul>
      </div>
      <div class="navbar-collapse collapse" id="nav-search">
        <div class="search-wrapper navbar-nav  my-2 my-lg-0 justify-content-center">
          <input type="search" class="form-control text-search" placeholder="Search for products..."
            aria-label="Search for products...">
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous" async></script>
{% schema %}
    {
        "name": "Header",
        "class": "header",
        "settings": [
            {
                "type": "text",
                "id": "logo_alt_text",
                "label": "Logo Alt Text",
                "default": "My Store"
            },
            {
                "type": "link_list",
                "id": "main_menu",
                "label": "Main Menu",
                "default": "main-menu"
            },
            {
                "type": "url",
                "id": "link_icon",
                "label": "link"
            }

        ],
        "presets": [
          {
            "name": "t-Header",
            "category": "Header",
            "settings": {
              
            }
          }
        ]
    }
{% endschema %}
